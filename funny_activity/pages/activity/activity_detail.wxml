<!--pages/activity/activity_detail.wxml-->

<view class="container ">
  <view class="page-section weui-panel weui-panel_access">
    <view>
      <image class="acticity_image" src="/images/picture1.png" mode="cover"></image>
    </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text">
          <view class="weui-media-box__title weui-media-box__title_in-text">活动一</view>
          <view class="weui-media-box__desc">嗨歌，吃饭～</view>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <label class="weui-label">类别</label>
        </view>
        <view class="weui-cell__bd">
          <label>运动</label>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <label class="weui-label">时间</label>
        </view>
        <view class="weui-cell__bd">
          <label>2018-07-17 09:00</label>
        </view>
      </view>
      <navigator class="weui-cell weui-cell_access" url="/pages/activity/my_activity" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <label class="weui-label">地点</label>
        </view>
        <view class="weui-cell__bd">
        <label>观音山</label>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access">定位
        </view>
      </navigator>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <label class="weui-label">费用</label>
        </view>
        <view class="weui-cell__bd">
          <label>类别或者金额</label>
        </view>
      </view>
    </view>
    </view>

  <view class="page-section">
    <view class="weui-cells weui-cells_after-title">
      <navigator class="weui-cell weui-cell_access" url="/pages/activity/participate_list" hover-class="weui-cell_active">
        <view class="weui-cell__bd">
          <label class="weui-label">参加:2人</label>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access">报名详情
        </view>
      </navigator>
      <block wx:if="{{true}}">
        <view class="weui-cell participate_content">
          <view class="weui-cell__bd weui-flex-col" wx:for="{{5}}">
            <image class="participate_image" src="/images/picture1.png"></image>
            <text class="input_text">hello</text>
          </view>
          
        </view>
      </block>
    </view>
  </view>

  <view class="page-section block_bottom">
    <view class="weui-cells weui-cells_after-title">
      <navigator class="weui-cell weui-cell_access" url="/pages/activity/activity_manage" hover-class="weui-cell_active">
        <view class="weui-cell__bd">
          <label class="weui-label">管理</label>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access">仅对发起人显示
        </view>
      </navigator>
     </view>
  </view>


  <view class="btn_bottom text_center">
      <navigator class='btn_style_l' url="/pages/activity/activity" open-type='switchTab' hover-class="weui-cell_active">
          <view class="weui-flex-col">
            <image class="home_image" src="/images/index.png"></image>
            <text class="input_text">首页</text>
          </view>
      </navigator>
      <view class='btn_style_m' url="/pages/activity/my_activity" hover-class="weui-cell_active" open-type="share">
        <view class='btn_align'>
          <text class="input_text text_size">分享</text>
        </view>
      </view>
      <block>
        <view wx:if="{{true}}" class='btn_style_r' bindtap='bindJoinActivity' hover-class="weui-cell_active">
          <view class='btn_align'>
            <text class="text_white text_size">报名</text>
          </view>
        </view>
        <view wx:if="{{false}}"class='btn_style_r' bindtap='bindOutActivity' hover-class="weui-cell_active">
          <view class='btn_align'>
            <text class="text_white text_size">退出</text>
          </view>
        </view>
      </block>

  </view>
 
</view>


